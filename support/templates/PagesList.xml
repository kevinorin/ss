<Template xmlns:Component="Component://approach.im" xmlns:Render="Render://approach.im">
	<Component:PagesList type="json">
	{
		"compositions":
		{
			"owner" : "usr",
            "type" : "kind",
            "title" : "heading",
            "descript" : "about",
            "layout_structure" : "styler",
			"id" : "_self_id",
            "alias" : "title"
		}
	}
	</Component:PagesList>	
	<Render:Markup bind="PagesList" tag="tr" class="instance selectable" data-self="[@ _self_id @]">
                <td class="center col-sm-1">[@ usr @], [@ kind @]</td>
                <td class="center col-sm-3">[@ heading @]</td>
                <td class="center col-sm-2">[@ title @]</td>
                <td class="center col-sm-4">[@ about @]</td>
                <td class="center uniformjs Interface col-sm-2">
                <ul class="controls" data-role="Service">
                    <li class="control" style="float: left;" data-context='{"_self_id":[@ _self_id @], "_response_target":"#componentSettingsStage"}' data-intent='{"REFRESH":{"PagesList":"Edit"}}' >
                        <a data-toggle="modal" href="#AdminModal"><span class="fa fa-pencil nice_yellowish"><i style="font-size:24px;">&#160;</i></span></a> &#160;&#160;
                    </li>
                    
                    <li style="float: left;padding-bottom: 4px;" >
                        <a target="_new" href="//myrealestatesite.co/[@ _self_id @]?interface" alt="Layout Editor" title="Open in Layout Editor" ><span class="fa fa-newspaper-o text-info"><i style="font-size:24px;">&#160;</i></span></a> &#160;&#160;
                    </li>
                    <li class="control" style="float: left;padding-bottom: 4px;" data-context='{"dataset://compositions":{"__self_id":[@ _self_id @], "_response_target":"#componentSettingsStage"}}' data-intent='{"REFRESH":{"PagesList":"Delete"}}' >
                        <a data-toggle="modal" href="#AdminModal"><span class="fa fa-trash-o text-danger"><i style="font-size:24px; color:#228b22; ">&#160;</i></span></a>
                    </li>
                </ul>
                </td>
	</Render:Markup>
</Template>